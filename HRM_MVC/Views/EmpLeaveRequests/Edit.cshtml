@model Model.Models.LeaveRequest

@{
    ViewData["Title"] = "Edit";
}
<h4 style="color: #990099">Edit</h4>

<h1 style="color: #B70000; text-align: center;">Leave Request</h1>
@if (ViewData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success">@ViewData["SuccessMessage"]</div>
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control"/>
            </div>
            <div class="form-group" hidden>
                <label asp-for="RequestId" class="control-label"></label>
                <input asp-for="RequestId" class="form-control">
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <label asp-for="DateOff" class="control-label">Date Off:</label>
                <input asp-for="DateOff" type="date" class="form-control" />
                <span asp-validation-for="DateOff" class="text-danger"></span>
            </div>
            <div class="form-group style=" margin-bottom: 10px;"">
                <label asp-for="DaysLeave" class="control-label">Days Leave:</label>
                <input type="number" min="1" asp-for="DaysLeave" class="form-control" />
                <span asp-validation-for="DaysLeave" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <label asp-for="Reason" class="control-label">Reason:</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Hrid" class="control-label"></label>
                <input asp-for="Hrid" class="form-control"/>
            </div>
            <div class="form-group" style="margin-bottom: 10px;" hidden>
                <label asp-for="Status" class="control-label">Status:</label>
                <input asp-for="Status" class="form-control" />
            </div>
            <div class="form-group" style="margin-bottom: 10px;" hidden>
                <label asp-for="Comment" class="control-label">Comment:</label>
                <input asp-for="Comment" class="form-control" />
            </div>
            <div class="form-group" style="display: flex; justify-content: center; margin-top: 10px;">
                <input type="submit" value="Save" class="btn btn-primary" style="width: 100px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
