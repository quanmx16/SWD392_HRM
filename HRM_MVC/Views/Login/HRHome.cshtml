<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 70vh;">
    <form asp-action="Index" asp-controller="Employees" method="get" style="margin-bottom: 10px;">
        <button type="submit" class="btn btn-secondary" style="width: 500px; background-color: #4DB5BF; color: #FFFFFF">List Employees</button>
    </form>
    
    <form asp-controller="Attendence" asp-action="CheckIn" method="get" style="margin-bottom: 10px;">
        <button type="submit" class="btn btn-secondary" style="width: 500px; background-color: #4DB5BF; color: #FFFFFF">Check In</button>
    </form>
    <form asp-controller="Attendence" asp-action="CheckOut" method="get" style="margin-bottom: 10px;">
        <button type="submit" class="btn btn-secondary" style="width: 500px; background-color: #4DB5BF; color: #FFFFFF">Check Out</button>
    </form>

    <form asp-action="Create" asp-controller="Employees" method="get" style="margin-bottom: 10px;">
        <button type="submit" class="btn btn-secondary" style="width: 500px; background-color: #4DB5BF; color: #FFFFFF">Create new Employee</button>
    </form>

    <form asp-action="Index" asp-controller="Logout" method="get" style="margin-bottom: 10px;">
        <button type="submit" class="btn btn-secondary" style="width: 500px; background-color: #4DB5BF; color: #FFFFFF">Logout</button>
    </form>
</div>
