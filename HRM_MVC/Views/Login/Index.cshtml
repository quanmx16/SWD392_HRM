@{
}
<div style="display: flex; justify-content: center; align-items: center; height: 70vh;">
    <div style="width: 500px; padding: 20px; background-color: #f5f5f5; border: 1px solid #ccc; border-radius: 5px;">
        <h2 style="text-align: center;">Login</h2>
        <form asp-action="LoginAction" asp-controller="Login" method="post">
            <div style="margin-bottom: 10px;">
                <label for="email">Email:</label>
                <input type="text" name="email" id="email" value="@(ViewData["Email"]!=null? ViewData["Email"]:"")" style="width: 100%; padding: 5px;" />
            </div>
            <div style="margin-bottom: 10px;">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" style="width: 100%; padding: 5px;" />
            </div>
            @if (ViewData["LoginError"] != null)
            {
                <label style="color: red;">@ViewData["LoginError"]</label>
                <br />
            }
            <div style="text-align: center;">
                <input type="submit" value="Login" style="padding: 5px 10px; background-color: #4CAF50; color: white; border: none; cursor: pointer;" />
            </div>
        </form>
    </div>
</div>

