@{
}
<div>
    <form action="/Login/LoginAction" method="post" class="form-control">
        <label for="email">Email</label>

        <input type="text" name="email" id="email" value="@(ViewData["Email"]!=null? ViewData["Email"]:"")" />
        <br />
        <label for="password">Password</label>
        <input type="password" name="password" id="password" />
        <br />
        @if (ViewData["LoginError"] != null)
        {
            <label class="text-danger">@ViewData["LoginError"]</label>
        }
        <br />
        <input type="submit" value="Login" />
    </form>
</div>
