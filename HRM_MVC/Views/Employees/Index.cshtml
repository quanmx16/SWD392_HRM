@model EmpViewModel

@{
    ViewData["Title"] = "List Employee";
}

<h1 style="text-align: center; color: #B70000;">Index</h1>
<div style="display: flex; justify-content: center; align-items: center; margin-bottom: 10px;">
    <div class="col-sm-8 form-group" style="margin-right: 10px;">
        <form method="get" asp-action="Index" class="search-form">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Type to Search..." asp-for="search">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>
</div>
<div style="display: flex; justify-content: center; align-items: center; overflow-x: auto;">
    <div style="max-width: 1200px;">
        <table class="table" style="width: 100%;">
            <thead>
                <tr>
                    <th style="width: 50px;">No</th>
                    <th style="width: 150px;">Emplyee Name</th>
                    @*<th style="width: 120px;">Date Of Birth</th>*@
                    @*<th style="width: 80px;">Gender</th>*@
                    <th style="width: 200px;">Email</th>
                    @*<th style="width: 120px;">Password</th>*@
                    <th style="width: 100px;">Role</th>
                    <th style="width: 120px;">Phone</th>
                    @*<th style="width: 200px;">Address</th>*@
                    @*<th style="width: 100px;">Salary</th>*@
                    @*<th style="width: 100px;">TaxCode</th>*@
                    @*<th style="width: 80px;">Level</th>*@
                    @*<th style="width: 120px;">Day One</th>*@
                    @*<th style="width: 120px;">Last Day</th>*@
                    <th style="width: 150px;">Department</th>
                    <th style="width: 150px;">Manager</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model.listEmp)
                {
                    <tr>
                        <td>@i</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmplyeeName)
                        </td>
                        @*<td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                    </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                    </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        @*<td>
                    @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.TaxCode)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.DayOne)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.LastDay)
                    </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Manager.EmplyeeName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.EmployeeId.Trim()" style="margin-right: 5px; color: #007bff; text-decoration: none;">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.EmployeeId.Trim()" style="margin-right: 5px; color: #007bff; text-decoration: none;">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.EmployeeId.Trim()" style="margin-right: 5px; color: #007bff; text-decoration: none;">Delete</a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>
