@model IEnumerable<Model.Models.LeaveRequest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<h5 class="text-success">@TempData["Success"]</h5>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateOff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysLeave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.DateOff.Value.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysLeave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmplyeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hr.EmplyeeName)
            </td>
            <td>
                    <a asp-action="Approve" asp-route-id="@item.RequestId">Approve</a> |
                    <a asp-action="Deny" asp-route-id="@item.RequestId">Deny</a>
            </td>
        </tr>
}
    </tbody>
</table>
