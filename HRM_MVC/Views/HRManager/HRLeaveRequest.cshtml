@model List<Model.Models.LeaveRequest>

@{
    ViewData["LeaveRequest"] = "HRLeaveRequest";
}

<h1>Leave Request</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].DateOff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DaysLeave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Employee.EmplyeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Hr.EmplyeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysLeave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
            </td>
                @if (item.Hr != null)
                {
                  <td>
                @Html.DisplayFor(modelItem => item.Hr.EmployeeId)
                    </td>}
            else
                    {
                        <h4>N/A</h4>
                    }
                
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
            <td>
                <a asp-action="UpdateHRLeaveRequest" asp-controller="RequestController" asp-route-id="@item.RequestId">View this</a> |
            </td>
        </tr>
}
    </tbody>
</table>